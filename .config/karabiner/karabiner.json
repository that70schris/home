{
  "global": {
    "show_in_menu_bar": false
  },
  "profiles": [
    {
      "name": "Default",
      "virtual_hid_keyboard": {
        "keyboard_type_v2": "ansi"
      },
      "complex_modifications": {
        "rules": [
          {
            "description": "Hyper Key (⌃⌥⇧⌘)",
            "manipulators": [
              {
                "type": "basic",
                "description": "Caps Lock -> Hyper Key",
                "from": {
                  "key_code": "caps_lock",
                  "modifiers": {
                    "optional": [
                      "any"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "right_command",
                    "modifiers": [
                      "command",
                      "control",
                      "option",
                      "shift"
                    ]
                  }
                ],
                "to_if_alone": [
                  {
                    "key_code": "escape"
                  }
                ]
              }
            ]
          },
          {
            "description": "Hyper Key sublayer \"o\"",
            "manipulators": [
              {
                "description": "Toggle Hyper sublayer o",
                "type": "basic",
                "conditions": [],
                "from": {
                  "key_code": "o",
                  "modifiers": {
                    "mandatory": [
                      "command",
                      "control",
                      "option",
                      "shift"
                    ]
                  }
                },
                "to": [
                  {
                    "set_variable": {
                      "name": "hyper_sublayer_o",
                      "value": 1
                    }
                  }
                ],
                "to_after_key_up": [
                  {
                    "set_variable": {
                      "name": "hyper_sublayer_o",
                      "value": 0
                    }
                  }
                ]
              },
              {
                "description": "Open -a 'Mail.app'",
                "to": [
                  {
                    "shell_command": "open -a 'Mail.app'"
                  }
                ],
                "type": "basic",
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_sublayer_o",
                    "value": 1
                  }
                ],
                "from": {
                  "key_code": "e",
                  "modifiers": {
                    "mandatory": [
                      "command",
                      "control",
                      "option",
                      "shift"
                    ]
                  }
                }
              }
            ]
          }
        ]
      }
    }
  ]
}