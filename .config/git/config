[init]
  defaultBranch = main

[advice]
  addIgnoredFile = false

[alias]
  showtool = "!show() { c=$(git rev-parse ${*:-HEAD}); git difftool $c~ $c; }; show $1"

[core]
  editor = vim

[credential]
  helper = osxkeychain

[diff]
	tool = Kaleidoscope
  guitool = Kaleidoscope
[difftool]
  prompt = false
  guiDefault = true
  trustExitCode = true
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path $MERGED -- $LOCAL $REMOTE
[difftool "vscode"]
  cmd = code -n --wait --diff $LOCAL $REMOTE

[merge]
  tool = Kaleidoscope
  guitool = Kaleidoscope
[mergetool]
  keepBackup = false
  hideResolved = true
  prompt = false
  trustExitCode = true
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output $MERGED --base $BASE -- $LOCAL --snapshot $REMOTE --snapshot
  trustExitCode = true
[mergetool "vscode"]
  cmd = code -n --wait $MERGED
  trustExitCode = true

[pull]
  rebase = true

[submodule]
  recursive = true

[includeIf "gitdir:~/"]
  path = ./config.chris
