{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@builder.io/qwik",
    "lib": [
      "es2022",
      "DOM",
      "WebWorker",
      "DOM.Iterable"
    ],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2017",
    "types": [
      "node",
      "vite/client"
    ]
  },
  "include": [
    "src",
    "./*.d.ts",
    "./*.config.ts"
  ]
}
